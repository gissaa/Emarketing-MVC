@model Emarketing.Models.Tuser
@using PagedList.Mvc
@{

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<body>
    <div class="img-responsive">
        @using (Html.BeginForm("SignUp",
                        "User",
                        FormMethod.Post,
                        new { enctype = "multipart/form-data" }))
        {
            <div class="insidebox">
                <div> <h1>User Sign Up</h1></div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                        @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@
                        @Html.TextBoxFor(x => x.Tuser_name, new { @class = "form-control", @placeholder = "Username" })

                    </div>
                    <span style="color:#DF9980">   @Html.ValidationMessageFor(x => x.Tuser_name) </span>

                </div>


                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                        @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@
                        @Html.TextBoxFor(x => x.Tuser_email, new { @class = "form-control", @placeholder = "Email" })

                    </div>
                    <span style="color:#DF9980">   @Html.ValidationMessageFor(x => x.Tuser_email) </span>

                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                        @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@
                        @Html.PasswordFor(x => x.Tuser_password, new { @class = "form-control", @placeholder = "Password" })

                    </div>
                    <span style="color:#DF9980">   @Html.ValidationMessageFor(x => x.Tuser_password) </span>

                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                        @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@
                        @Html.TextBoxFor(x => x.Tuser_contact, new { @class = "form-control", @placeholder = "Phone" })

                    </div>
                    <span style="color:#DF9980">   @Html.ValidationMessageFor(x => x.Tuser_contact) </span>

                </div>


                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>

                        <input type="file" name="imgfile" id="imgfile" class="form-control" required="required" />



                    </div>


                </div>



                <div class="form-group">

                    <input type="submit" value="Add" class="btn btn-block" />

                </div>

                <div class="form-group">
                    <p style="color:#DF9980">@ViewBag.error</p>
                </div>



            </div>

        }
    </div>

</body>
