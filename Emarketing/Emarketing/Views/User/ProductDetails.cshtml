@model Emarketing.Models.ProductDetails
@{

    ViewBag.Title = "Product Details";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<head>
    <title>Product Details</title>
</head>
<body>
    <div class="deneme">
        <div>
            <h1>@Model.product_name <small>AD-ID:@Model.product_id</small></h1>
        </div>

        <img src="@Url.Content(@Model.product_image)" style="width:800PX; height:450PX" />

        <div>
            <h1>Description: </h1>
            <p>@Model.product_des</p>
        </div>

        <table>
            <tr> <td>Price: </td> <td>@Model.product_price </td> </tr>
            <tr> <td>Category: </td> <td>@Model.category_name </td> </tr>
            <tr> <td>Posted by: </td> <td>@Model.Tuser_name <img src="@Url.Content(@Model.Tuser_image)" style="width:40px; height:40px" /> </td> </tr>
            <tr> <td>Contact: </td> <td>@Model.Tuser_contact  </td> </tr>
            <tr>
                <td colspan="2">
                    @if (Convert.ToInt32(Session["Tuser_id"]) == Convert.ToInt32(Model.product_fk_user))
                {
                    @Html.ActionLink("Delete Product", "DeleteProduct", new {id = Model.product_id })
            }
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    @if (Session["Tuser_id"] !=null)
                    {
                        @Html.ActionLink("Add to Cart", "AddtoCart",new { id=Model.product_id})

                    }
                </td>
            </tr>



        </table>


    </div>


</body>