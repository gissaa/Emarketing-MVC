@using PagedList.Mvc
@model  PagedList.IPagedList<Emarketing.Models.Tcategory>
@{

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>View  Category</title>
</head>
<body>
    <div class="container" style="height:1150px; ">

        <div class="row" style="margin-bottom:40px">
            @using (@Html.BeginForm("Index", "User"))
            {
                <div class="navbar-form ">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search Category" name="search" id="search">
                    </div>
                    <button type="submit" class="btn">Search</button>
                </div>
            }
            @{ int x = 0;}
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    x++;
                    <div class="col-lg-4 col-md-6" style="height:200px;margin-top:100px">

                        <img class="img img-responsive cimg" src="@Url.Content(item.category_image)" style=" height:100%;width:100% ;border-radius:50px 50px 50px 50px" />
                        <h4 style="color:#808080; font-family:'Arial Rounded MT';text-align:center"> @Html.ActionLink(@item.category_name, "ViewProduct", new { id = @item.category_id })</h4>

                    </div>

                }
            }

        </div>
         <h4>@x Results found</h4>
    </div>
    <div id="container" style="margin-left: 20px">
        <div class="pagination" style="margin-left: 400px">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
            of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </div>
</body>
</html>





