@using PagedList.Mvc
@model  PagedList.IPagedList<Emarketing.Models.Tcategory>
@{

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>View  Category</title>
</head>
<body>
    <div class="container" style="height:1150px; ">
        <div class="row" style="margin-bottom:40px">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-4" style="height:200px;margin-top:100px">
                        <img src="@Url.Content(item.category_image)" style=" height:100%;width:100% ;border-radius:50px 50px 50px 50px" />
                        <h4 style="color:#808080; font-family:'Arial Rounded MT';text-align:center">@item.category_name</h4>
                        <div style="margin-left:160px">
                            @Html.ActionLink("Delete", "Delete", new { id = item.category_id }, new { @class = "btn btn-danger btn-sm" })
                        </div>
                    </div>
                }
            }
        </div>
    </div>
    <div id="container" style="margin-left: 20px">
        <p></p>
        <p></p>
        <div class="pagination" style="margin-left: 400px">
            
                Page @(Model.PageCount< Model.PageNumber ? 0 : Model.PageNumber)
                    of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("ViewCategory", new { page }))   
            

        </div>
    </div>
</body>
</html>

