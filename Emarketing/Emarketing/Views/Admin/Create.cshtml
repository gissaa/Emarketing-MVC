@model Emarketing.Models.Tcategory
@{

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
    <div class="img-responsive">
        @using (Html.BeginForm("Create",
                          "Admin",
                          FormMethod.Post,
                          new { enctype = "multipart/form-data" }))
        {
            <div class="insidebox">
                <div> <h1>Add Category</h1></div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                        @Html.TextBoxFor(x => x.category_name, new { @class = "form-control", @placeholder = "Category" })
                    </div>
                    <span style="color:red">   @Html.ValidationMessageFor(x => x.category_name) </span>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                        <input type="file" name="imgfile" id="imgfile" class="form-control" required="required" />
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-block" />
                </div>
                <div class="form-group">
                    <p style="color:red">@ViewBag.error</p>
                </div>
            </div>
        }
    </div>
